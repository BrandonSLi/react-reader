{
  "name": "react-reader",
  "version": "0.20.5",
  "description": "A epub-reader for React powered by ePubJS",
  "main": "lib/index.js",
  "scripts": {
    "compile": "NODE_ENV=production babel --out-dir lib src/modules",
    "prepare": "npm run compile",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "deploy": "gh-pages-deploy",
    "clean-source": "rimraf lib src public .babelrc .eslintrc .npmignore package.json README.md",
    "format": "prettier --write \"src/**/*.js\"",
    "test": "eslint src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gerhardsletten/react-reader.git"
  },
  "author": "Gerhard Sletten",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gerhardsletten/react-reader/issues"
  },
  "homepage": "https://gerhardsletten.github.io/react-reader",
  "devDependencies": {
    "@babel/cli": "^7.17.3",
    "@babel/core": "^7.17.4",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.17.3",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@types/react": "^17.0.39",
    "csstype": "^3.0.10",
    "eslint-plugin-prettier": "^4.0.0",
    "gh-pages-deploy": "^0.5.1",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-file-reader-input": "^2.0.0",
    "react-scripts": "^5.0.0",
    "rimraf": "^3.0.2",
    "styled-components": "^5.3.3",
    "styled-components-breakpoint": "^2.1.1",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "epubjs": "^0.3.92",
    "prop-types": "^15.8.1",
    "react-swipeable": "^6.2.0"
  },
  "peerDependencies": {
    "react": ">=17.0.2"
  },
  "gh-pages-deploy": {
    "staticpath": "build",
    "prep": [
      "build"
    ],
    "post": [
      "clean-source"
    ],
    "noprompt": false
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "extends": "react-app",
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "warn"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "types": "types/index.d.ts"
}
